---
interface Props {
    title: string;
    subtitle: string;
    socials?: boolean
}

const { title, subtitle, socials } = Astro.props;
---
<section class="hero">
    <div class="hero-content">
        <article class="hero-intro">
            <h1>{title}</h1>
            <div class="subtitle">{subtitle}</div>
        </article>
        
        {socials && 
        <article class="hero-social">
            <slot></slot>
        </article>
        }

    </div>
</section>

<style>
	.hero {
        display: flex;
        flex-direction: column;
        gap: 2rem;
	}

    .hero-content {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
    }

	.hero-intro {
		position: relative;
		max-width: fit-content;

		.subtitle {
			padding: 0.3rem 0.5rem;
			border: 1px solid var(--primary-color);
			background-color: var(--secondary-color);
			font-weight: 700;
		}
	}

	.hero-social {
		display: flex;
		gap: 1rem;
		padding: 1rem;
	}

    /* .hero-about {
        text-align: justify;
    } */
</style>