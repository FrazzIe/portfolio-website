---
interface Props {
    pages: number;
}

const { pages } = Astro.props;
---

<script src="./carousel-paginator.component.ts"></script>

<f-carousel-paginator>
    {Array.from({ length: pages }).map((_, idx) => <button aria-label={`Page ${idx + 1}`}></button>)}
</f-carousel-paginator>

<style>
    f-carousel-paginator {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);

        padding: 0.5rem;
        border-radius: 2px 2px 0 0;
        background-color: rgba(var(--black-color-rgb), 0.5);

        display: flex;
        flex-direction: row;
        gap: 1rem;
        flex-wrap: wrap;
        
        button {
            border: none;

            font-size: var(--default-font-size);
            box-sizing: border-box;

            width: 2rem;
            height: 0.5rem;

            background-color: rgba(var(--white-color-rgb), 0.7);
            

            &.active { background-color: var(--white-color); }
            &:hover { background-color: rgba(var(--white-color-rgb), 0.9); }
            &:focus-visible { outline: var(--accent-color) auto 2px; }
        }
    }
</style>