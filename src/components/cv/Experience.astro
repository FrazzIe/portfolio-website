---
import type { CollectionEntry } from 'astro:content';
import { shortDate } from '@helpers/date';

interface Props {
    entry: CollectionEntry<'experience'>
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<article>
    <div>
        <h5>{entry.data.role}</h5>
        <small>{entry.data.org}</small>
    </div>
    
    <span>
        {shortDate(entry.data.startDate)} 
        &mdash; 
        {entry.data.endDate ? shortDate(entry.data.endDate) : 'Present'}
    </span>
</article>

<slot><Content/></slot>

<style>
    article {
        display: flex; 
        align-items: center; 
        justify-content: space-between;
        gap: 1rem;
        flex-wrap: wrap;
    }
</style>