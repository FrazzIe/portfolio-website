---
import Link from '@components/Link.astro';
import type { CollectionEntry } from 'astro:content';
import { shortDate } from '@helpers/date';

interface Props {
    entry: CollectionEntry<'projects'>
}

const { entry } = Astro.props;
---

<article>
    <li><Link href={`/projects/${entry.slug}`}>{entry.data.name}</Link>: {entry.data.blurb}</li>
    <small>{shortDate(entry.data.startDate)}</small>
</article>

<style>
    article {
        display: flex; 
        align-items: center; 
        justify-content: space-between;
        gap: 0.25rem;        
    }

    li {
        flex: 1;
    }
</style>