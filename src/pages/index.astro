---
import Hero from "@components/layout/Hero.astro";
import Link from "@components/shared/Link.astro";
import MailButton from "@components/shared/MailButton.astro";
import Layout from "@layouts/Layout.astro";
import { navigation, roles, socials } from "src/site.config";
---

<Layout 
    title="fwatt | Home" 
    description="Fraser Watt's portfolio"
    og={{ type: 'profile' }}
    header={false} 
    flex>
    <div class="container">
        <Hero title="Fraser Watt">
            <div slot="subtitle" class="subtitle-slider">
                {roles.map(role => <span>{role}</span>)}
            </div>
        </Hero>

        <nav>
            {navigation.filter(i => i.url !== '/').map(i => <Link {...i}/>)}
        </nav>

        <div class="socials">
            <MailButton></MailButton>
            <Link url={socials.linkedin} icon="ri:linkedin-box-fill" aria-label="LinkedIn" />
            <Link url={socials.github} icon="ri:github-fill" aria-label="GitHub" />
        </div>
    </div>
</Layout>

<style>
    .container {
        display: grid;
        place-items: center;
        place-content: center;

        flex: 1;
        gap: 1.5rem;
    }

    @keyframes slide {
        10% { margin-top: 0; } 25% { margin-top: -20px; }
        30% { margin-top: -20px; } 40% { margin-top: -40px; }
        60% { margin-top: -40px; } 70% { margin-top: -60px; }
        85% { margin-top: -60px; } 95% { margin-top: 0; }
        100% { margin-top: 0; }
    }

    .subtitle-slider {
        height: 20px;
        overflow: hidden;
        position: relative;

        span { display: block; }

        span:first-child {
            animation: slide 6s linear infinite;
        }
    }

    nav {
        display: flex;
        gap: 1rem;

        a {
            text-decoration: none;
            border-bottom: 1px solid var(--d-white-color);
            padding-bottom: 1px;
            font-weight: 500;
        }

        font-size: var(--h5-font-size);
    }

    .socials {
        display: flex;
        gap: 1rem;
        padding-top: 1rem;
    }

    :global(footer) {
        justify-content: center;
    }
</style>
